    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
}

.projects-header h2 {
    font-size: 1.5em;
    margin: 0;
}

.projects-stats {
    display: flex;
    gap: 20px;
}

.projects-stats div {
    text-align: center;
}

.projects-stats span {
    display: block;
    font-size: 1.2em;
    font-weight: bold;
}

.current-date {
    font-size: 1.2em;
    font-weight: bold;
}

.projects-list {
    display: flex;
    gap: 20px;
}

.project-card {
    background-color: #f0f4ff;
    border-radius: 10px;
    padding: 20px;
    flex: 1;
    box-shadow: 0px 0px 10px rgba(0,0,0,0.1);
}

.project-card .project-date {
    font-size: 0.9em;
    margin-bottom: 10px;
    color: #888;
}

.project-card .project-title {
    font-size: 1.2em;
    font-weight: bold;
    margin-bottom: 5px;
