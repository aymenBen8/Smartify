      /* Reset and base styles */
body, html {
    margin: 0;
    padding: 0;
    font-family: 'Arial', sans-serif;
    background-color: #f5f7fb;
    color: #333;
}

/* Sidebar */
/* Sidebar */
.sidebar {
    width: 80px; /* Largeur fixe pour la sidebar */
    background-color: #333; /* Couleur de fond */
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    display: flex;
    flex-direction: column;
    align-items: flex-start; /* Alignement à gauche */
    padding: 20px;
    box-shadow: 2px 0 5px rgba(0,0,0,0.1);
    color: #fff; /* Couleur du texte */
    overflow: hidden; /* Masquer tout contenu qui dépasse */
}

/* Alignement et espacement pour les éléments de la liste */
.sidebar ul {
    list-style: none;
    padding: 0;
    width: 100%; /* Largeur totale de la liste */
}

.sidebar ul li {
    margin: 10px 0; /* Espacement entre les éléments */
    width: 100%; /* Prendre toute la largeur disponible */
}

.sidebar ul li a {
    text-decoration: none;
    color: #fff; /* Couleur du texte */
    font-size: 1em; /* Réduction de la taille du texte */
    display: flex;
    align-items: center;
    padding: 10px;
    transition: background-color 0.3s ease;
    box-sizing: border-box; /* Inclure le padding dans la largeur totale */
    overflow: hidden; /* Masquer le texte qui dépasse */
}

.sidebar ul li a:hover {
    background-color: #444; /* Couleur de fond au survol */
    border-radius: 5px; /* Effet arrondi au survol */
}

.sidebar ul li a span {
    margin-left: 10px; /* Espacement entre l'icône et le texte */
    white-space: nowrap; /* Éviter le retour à la ligne du texte */
    overflow: hidden; /* Masquer le texte qui dépasse */
    text-overflow: ellipsis; /* Ajouter des points de suspension si le texte est trop long */
}


/* Horizontal Menu */
.horizontal-menu {
    background-color: #ffffff;
    padding: 10px 20px;
    border-radius: 15px;
    box-shadow: 0px 0px 10px rgba(0,0,0,0.1);
    margin-bottom: 20px;
    display: flex; /* Aligne les éléments horizontalement */
    justify-content: center; /* Centre les éléments horizontalement */
}

.horizontal-menu ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex; /* Rend la liste horizontale */
}

.horizontal-menu ul li {
    margin-right: 20px; /* Espacement entre les éléments */
}

.horizontal-menu ul li a {
    text-decoration: none;
    color: #333;
    font-size: 1.2em;
    padding: 5px 10px;
    border-radius: 10px;
    transition: background-color 0.3s ease;
}

.horizontal-menu ul li a:hover {
    background-color: #f0f4ff;
}

/* Main Content */
.main-content {
    margin-left: 120px; /* Cette valeur doit correspondre à la largeur de la sidebar */
    padding: 20px; /* Ajouter un peu de padding pour l'esthétique */
}

/* Header */
header {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    margin-bottom: 40px;
}

.header-actions {
    display: flex;
    align-items: center;
}

.header-actions button {
